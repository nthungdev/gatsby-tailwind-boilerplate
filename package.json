{
  "name": "gatsby-tailwind-boilerplate",
  "private": true,
  "description": "A boilerplate bootstrap for Gatsby x TailwindCSS",
  "version": "0.1.0",
  "license": "0BSD",
  "scripts": {
    "build:css": "tailwind build src/styles/tailwind.css -o src/styles/index.css",
    "watch:css": "tailwind build src/styles/tailwind.css -o src/styles/index.css",
    "build": "yarn build:css && gatsby build",
    "dev": "yarn watch:css && gatsby develop",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "start": "npm run develop",
    "serve": "gatsby serve --host 0.0.0.0",
    "clean": "gatsby clean",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 1"
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "gatsby": "^2.24.63",
    "gatsby-plugin-breakpoints": "^1.2.4",
    "gatsby-plugin-emotion": "^4.3.11",
    "gatsby-plugin-manifest": "^2.4.31",
    "gatsby-plugin-postcss": "^2.3.12",
    "gatsby-plugin-react-helmet": "^3.3.10",
    "gatsby-source-graphql": "^2.7.4",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-helmet": "^6.1.0",
    "twin.macro": "^1.10.0"
  },
  "devDependencies": {
    "prettier": "2.1.1",
    "tailwindcss": "^1.7.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nthungdev/gatsby-tailwind-boilerplate"
  },
  "bugs": {
    "url": "https://github.com/nthungdev/gatsby-tailwind-boilerplate/issues"
  }
}
